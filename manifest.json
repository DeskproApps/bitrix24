{
  "name": "@deskpro-apps/bitrix24",
  "title": "Bitrix24",
  "description": "Boost collaboration, automate sales, manage projects, and create websites, all seamlessly with Bitrix24",
  "version": "0.0.5",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "rest_api_url": {
      "title": "Rest API URL",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "validationPattern": "https://.*\\.bitrix24\\..*/rest/.*/$",
      "order": 10
    },
    "main_url": {
      "title": "Main URL",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "validationPattern": "^https:\\/\\/.*\\..*$",
      "order": 20
    },
    "verify": {
      "title": "",
      "type": "app_embedded",
      "options": { "entrypoint": "#/verify" },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 30
    }
  },
  "entityAssociations": {
    "bitrixContacts": {
      "entity": "person",
      "type": "external_id",
      "title": "Linked Bitrix24 Contacts"
    }
  },
  "proxy": {
    "whitelist": [
      { "url": "__rest_api_url__.*", "methods": ["GET", "POST"], "timeout": 30 }
    ]
  }
}
