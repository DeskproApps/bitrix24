{
  "name": "@deskpro-apps/bitrix24",
  "title": "Bitrix24",
  "description": "Boost collaboration, automate sales, manage projects, and create websites, all seamlessly with Bitrix24",
  "version": "0.0.0",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [
    {
      "target": "user_sidebar",
      "entrypoint": "index.html"
    }
  ],
  "settings": {
    "rest_api_url": {
      "title": "Rest API URL",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "validationPattern": "https://.*/rest/.*",
      "order": 10
    },
    "main_url": {
      "title": "Main URL",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "validationPattern": "^https:\\/\\/.*\\..*$",
      "order": 20
    }
  },
  "entityAssociations": {
    "bitrixContacts": {
      "entity": "person",
      "type": "external_id",
      "title": "Linked Bitrix24 Contacts"
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://.*/rest/.*",
        "methods": [
          "GET",
          "POST"
        ],
        "timeout": 30
      }
    ]
  }
}